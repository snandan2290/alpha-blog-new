
<%= render 'shared/errors', obj: @category %>
<%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
  <div class="form-group row">
    <%= f.label :name, 'Category Name', class: "col-3 col-form-label text-light" %>
    <div class="col-7">
      <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
    </div>
  </div>
  <div class="form-group row justify-content-center">
    <div class="col-3">
      <%= f.submit class: "btn btn-outline-light btn-lg" %>
    </div>
  </div>
<% end %>
                